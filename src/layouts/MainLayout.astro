---
// component import
import MainHead from "./MainHead.astro";
import Footer from "../components/Footer.astro";
import BtnWpp from "../components/BtnWpp.astro";
import Separator from "../components/Separator.astro";
import Header from "../components/Header.astro";


// style import
import "../styles/global.css";

const {
  title = "My Astro Blog",
  description = "My musings about the Astro framework",
  image,
  frontmatter,
  robots,
} = Astro.props;
---

<!doctype html>
<html lang="es">
  <MainHead {title} {description} {image} {frontmatter} {robots} />
 <body>
    <Header />
    <Separator />
    <slot />
    <BtnWpp/>
    <Footer />

    <script>
      import "../scripts/menu.js";
      import "../scripts/nav-scroll.js";
    </script>
  </body>
  </html>