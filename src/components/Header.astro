---
import Navigation from "./Navigation.astro";
import Hamburger from "./Hamburger.astro";
import ThemeIcon from "./ThemeIcon.astro";
import Logo from "./Logo.astro";
---

<header>
  <nav>
    <div id="elementoParaOcultar" class="without-links">
      <a href="#"><Logo /></a>
      <div class="btns">
        <Hamburger />
        <ThemeIcon />
      </div>
    </div>
    <svg
      class="logo-scroll"
      id="logo-scroll"
      xmlns="http://www.w3.org/2000/svg"
      fill="none"
      viewBox="0 0 128 128"
    >
      <path
        d="M50.4 78.5a75.1 75.1 0 0 0-28.5 6.9l24.2-65.7c.7-2 1.9-3.2 3.4-3.2h29c1.5 0 2.7 1.2 3.4 3.2l24.2 65.7s-11.6-7-28.5-7L67 45.5c-.4-1.7-1.6-2.8-2.9-2.8-1.3 0-2.5 1.1-2.9 2.7L50.4 78.5Zm-1.1 28.2Zm-4.2-20.2c-2 6.6-.6 15.8 4.2 20.2a17.5 17.5 0 0 1 .2-.7 5.5 5.5 0 0 1 5.7-4.5c2.8.1 4.3 1.5 4.7 4.7.2 1.1.2 2.3.2 3.5v.4c0 2.7.7 5.2 2.2 7.4a13 13 0 0 0 5.7 4.9v-.3l-.2-.3c-1.8-5.6-.5-9.5 4.4-12.8l1.5-1a73 73 0 0 0 3.2-2.2 16 16 0 0 0 6.8-11.4c.3-2 .1-4-.6-6l-.8.6-1.6 1a37 37 0 0 1-22.4 2.7c-5-.7-9.7-2-13.2-6.2Z"
      ></path>
      <style>
        path {
          fill: #000;
        }
        @media (prefers-color-scheme: dark) {
          path {
            fill: #fff;
          }
        }
      </style>
    </svg>

    <Navigation />
  </nav>
</header>

<style>
  header {
    width: 100%;
    background-color: black;
    position: fixed;
    z-index: 1000;
  }

  html.dark header {
    background-color: white;
  }

  nav {
    position: relative;
    max-width: var(--max-width);
    margin: auto;
    padding: var(--margen-x);
  }

  .without-links {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .btns {
    display: flex;
    flex-direction: row;
    justify-content: center;
    gap: 0.8rem;
  }

  .oculto {
    display: none;
  }

  .logo-scroll {
    width: 50px;
    display: none;
  }
  html.dark .logo-scroll path {
    fill: white;
  }

  @media (min-width: 640px) {
    nav{
      display: flex;
    }

    .btns{
      position: absolute;
      right: 1rem;
    }



  }
</style>

